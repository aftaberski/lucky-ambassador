<%= @question.title %><br>
  <%= render partial: "form"%>
<% @question.comments.each do |comment| %>
  <%= comment.content %><br>
<% end %>
<% @question.answers.each do |answer| %>
  <%= answer.content %><br>
      <%= render partial: "answers/form", locals: {answer: answer}%>
  <% answer.comments.each do |comment| %>
    <%= comment.content %>
  <% end %>

<% end %>